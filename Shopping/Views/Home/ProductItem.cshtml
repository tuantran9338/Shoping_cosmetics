@model Shopping.Models.Products


<div class="card" style="width: 18rem;">
    <img src="@Model.thumbnail" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => Model.name)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => Model.price)</p>
        <a href="~/ShoppingCart/Order/@Html.DisplayFor(modelItem => Model.id)?quantity=1"class="btn btn-primary">Add to Cart</a>
    </div>
</div>